<div class="lower">
  <h2>
    <a href="<%= "#{@event.group_url}" %>">
      <img class="group-logo" src="<%= @event.group_logo_url %>">
      <%= "#{@event.group_title}" %>
      <small>
        by <%= "#{@event.source}" %>
      </small>
    </a>
  </h2>
</div>

<div class="event-box">
  <h3 class="lower-title">
    開催する勉強会
  </h3>
  <%= render partial: 'events/event', locals: { upcoming_events: @events } %>
</div>

<div class="event-box">
  <h3 class="lower-title">
    過去の勉強会
  </h3>
  <% if @events_histories.count == 0 %>
    <p>過去の勉強会はありません</p>
  <% else %>
    <%= render partial: 'events/event', locals: { upcoming_events: @events_histories } %>
  <% end %>
</div>

<div class="twitter">
  <div class="twitter-content">
    <a class="twitter-timeline" href="<%= "#{@event.twitter_list_url}/members" %>">Tweets by TwitterDev</a>
    <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
  </div>
</div>
